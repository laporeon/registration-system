{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["./src", "./docs"],
    "target": "ES2022",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["src/*"],
      "@/docs/*": ["docs/*"]
    }
  },
  "include": ["./src/**/*", "docs"],
  "exclude": ["node_modules/**/*", "dist"]
}
